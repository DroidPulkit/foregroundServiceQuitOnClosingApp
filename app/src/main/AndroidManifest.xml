<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.pulkitkumar.foregroundServiceQuitOnAppClose">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name="me.pulkitkumar.foregroundServiceQuitOnAppClose.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="me.pulkitkumar.foregroundServiceQuitOnAppClose.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="me.pulkitkumar.foregroundServiceQuitOnAppClose.MainActivity" />
        <service android:name="me.pulkitkumar.foregroundServiceQuitOnAppClose.ExampleService"/>
    </application>

</manifest>